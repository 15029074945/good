<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jk.mapper.AreaMapper" >
  <resultMap id="BaseResultMap" type="com.jk.model.Area" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="parent_id" property="parentId" jdbcType="BIGINT" />
    <result column="area_name" property="areaName" jdbcType="VARCHAR" />
    <result column="is_hot" property="isHot" jdbcType="BIT" />
  </resultMap>
  <sql id="base_column_list">
  		id,parent_id,area_name,is_hot
  </sql>
  <!-- 找到父类城市 -->
  <select id="findParentAreaList" resultMap="BaseResultMap">
  	select <include refid="base_column_list"/> from t_area where parent_id=0 
  </select>
  <select id="findChildAreaList" resultMap="BaseResultMap">
  	select <include refid="base_column_list"/> from t_area where parent_id!=0 
  </select>
</mapper>